block content
  header.navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav(role='banner')
    .navbar-header.pull-left
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      h3.marginLeft.text-muted.text-left 
        a(href="/")
          img(src="/images/hnec_logo.png")
    nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
      ul.fontSizeNav.nav.navbar-nav
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | المستخدمين 
            b.caret
          ul.dropdown-menu
            li
              a(href='#') Action
            li
              a(href='#') بيانات المستخدم
            li
              a(href='#') خروج
        li
          a(href='#') التقارير
        li
          a(href='/admin/obs') المراقبين
        li
          a(href='/admin/org') الـمنظمات

  .row
    .col-xs-8.col-sm-8.col-md-8.col-lg-8.col-lg-offset-2.col-md-offset-2  
      .panel.panel-primary
        .panel-heading
          h3.panel-title
            span.glyphicon.glyphicon-bookmark
            |   لـوحـــة الـتـحــكــم
        .panel-body
          .row
            .col-xs-6.col-sm-6.col-md-6.col-lg-6
              a.btn-lg.btn.btn-danger.btn-block(href="/admin/obs/natOrgObs", role="button")
                span.glyphicon.glyphicon-user
                br
                | مــراقـب دولــي
              p
              a.btn-lg.btn.btn-warning.btn-block(href="/admin/obs/natMediaObs", role="button")
                span.glyphicon.glyphicon-th
                br
                | اعـلامي دولـي
              p
            .col-xs-6.col-sm-6.col-md-6.col-lg-6  
              a.btn-lg.btn.btn-info.btn-block(href="/admin/obs/moveOrg", role="button")
                span.glyphicon.glyphicon-th
                br
                | نـقـل مراقبين المنظمة
              p
              a.btn-lg.btn.btn-success.btn-block(href="/admin/obs/guestObs", role="button")
                span.glyphicon.glyphicon-user
                br
                | ضــيــف
              p

      .panel.panel-primary
        .panel-heading
          h3.panel-title
            span.glyphicon.glyphicon-bookmark
            | المراقبين
        .panel-body
          table#table

  #deleteObsModule.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-headr.modal-header-danger
          p.h1 هل أنت متأكد من  حدف ؟
        .modal-body
          p.h2 هل انت متأكد 
          p 
        .modal-footer
          button#confdelete.btn.btn-danger(type='button',data-dismiss='modal') حدف
          button.btn.btn-success(data-dismiss='modal', type='button') إلغاء 


  script(src="/js/jquery-1.11.1.min.js")
