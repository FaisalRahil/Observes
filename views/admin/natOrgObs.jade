  .col-sm-7.col-md-7.col-lg-7
    .row
      .panel.red-form.panel-danger
        .panel-heading إدخال مراقب دولي
        .panel-body
          form#natOrgObsId(role='form',method="post",action="/admin/addOb")
            .form-group
              input.form-control#name(name='name', placeholder='اﻹسم', type='text')
            .form-group
              input.form-control#pass_nid(name='pass_nid', placeholder='الرقم الوطني / جواز سفر', type='text')
            .form-group
              select#registration_org.form-control.selectpicker.show-tick(type="text",name="registration_org",data-show-subtext='true',data-size='5',data-live-search='true')
                option(value="", style='color:grey; display:none;') الرجاء اختيار منظمة
                for org in orgs
                  option(value="#{org.id_org}") #{org.name_org}
            .form-group.col-sm-6.col-md-6.col-lg-6  
              select#nationality.form-control.selectpicker.show-tick(type="text",name="nationality",data-show-subtext='true',data-size='5',data-live-search='true')
                option(value="", style='color:grey; display:none;') الرجاء اختيار الجنسية
                for nat in nationality
                  option(value="#{nat.id}",data-subtext="#{nat.name_en}") #{nat.name} 
            .form-group.col-sm-6.col-md-6.col-lg-6
              | الجنس :   
              input.form-control#gender(name='gender', placeholder='الجس', type='checkbox', data-reverse='false')
            //- .form-group.col-sm-6.col-md-6.col-lg-6  
