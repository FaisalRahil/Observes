
extends ../layout
block content
  //- link(rel='stylesheet', href='/css/reports.css')
  header.navbar.navbar-gray.navbar-fixed-top.bs-docs-nav(role='banner')
    .navbar-header.pull-left
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      h3.marginLeft.text-muted.text-left 
        a(href="/")
          img(src="/images/hnec_logo.png")
    nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
      ul.fontSizeNav.nav.navbar-nav
        li
          a(href='/admin/org') الـمنظمات
        li
          a(href='/admin/obs') المراقبين
        li(class='active')
          a(href='/reports') التقارير
        li
          a(href='/admin/moveOrg') تصحيح
        li
          a(href='/logout') خروج
  
  .col-md-8.col-md-offset-2(style="padding-top:5%")
    .panel.panel-primary
      .panel-heading
        .row
          .pull-right(style="margin-right: 10px;")
            h3.panel-title
              span.glyphicon.glyphicon-file
              | 
              span التقارير
      .panel-body
        .row
          form.form#reportN(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#obsByTypeN.form-control.selectpicker(name="obsByType", data-live-search="true", data-size=5, data-style="btn-warning")
                option(value="", style='color:grey; display:none;') بيانات المعتمدين (جهات/دولي) 
                option(value="1") منظمة عالمية
                option(value="2") ضيف
                option(value="3") إعلام دولي

            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#typebtnN.btn.btn-warning.btn-block() عرض
          
          //- form.form#reports(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#nat.form-control.selectpicker(name="obsByNationality", data-live-search="true", data-size=5, data-style="btn-danger")
                option(value="", style='color:grey; display:none;') بيانات المراقبين حسب الجنسية
                for nat in nationalities
                  option(value="#{nat.id}") #{nat.name}
        
            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#natbtn.btn.btn-danger.btn-block() عرض

          form.form#reportM(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#obsByTypeM.form-control.selectpicker(name="obsByType", data-live-search="true", data-size=5, data-style="btn-warning")
                option(value="", style='color:grey; display:none;') بيانات المعتمدين (جهات/محلي)

                option(value="4") منظمة محلية
                option(value="5") إعلام محلي
                option(value="6") وكيل
            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#typebtnM.btn.btn-warning.btn-block() عرض
            //- a.btn.btn-warning.btn-block(href="http://localhost:3003/reports/obsByType/#{}", target="_blank") عرض
        .row
          form.form#norgform(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              br
              select#orgobsN.form-control.selectpicker(name="orgobsN", data-live-search="true", data-size=5, data-style="btn-danger")
                option(value="", style='color:grey; display:none;') بيانات المعتمدين (افراد/دولي)
                for org in Norg
                  option(value="#{org.id_org}") #{org.name_org}

            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              br
              button#orgbtnN.btn.btn-danger.btn-block() عرض
          form.form#morgform(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              br
              select#orgobsM.form-control.selectpicker(name="orgobsM", data-live-search="true", data-size=5, data-style="btn-danger")
                option(value="", style='color:grey; display:none;') بيانات المعتمدين (افراد/محلي)
                for org in Morg
                  option(value="#{org.id_org}") #{org.name_org}

            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              br
              button#orgbtnM.btn.btn-danger.btn-block() عرض
        .row
          form.form#reportNzip(accept-charset="utf-8", role="form")
            br
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#obsByTypeNzip.form-control.selectpicker(name="obsByType", data-live-search="true", data-size=5, data-style="btn-warning")
                option(value="", style='color:grey; display:none;') اعداد المعتمدين (جهات/دولي)
                option(value="1") منظمة عالمية
                option(value="2") ضيف
                option(value="3") إعلام دولي

            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#typebtnNzip.btn.btn-warning.btn-block() عرض

          
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-info.btn-block(href="/reports/observerstype/1", target="_blank") بــيـانـات تفصيلية  للمراقبين
          
        .row
          form.form#norgformzip(accept-charset="utf-8", role="form")
            <br>
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#orgobsNzip.form-control.selectpicker(name="orgobsN", data-live-search="true", data-size=5, data-style="btn-danger")
                option(value="", style='color:grey; display:none;') اعداد المعتمدين (افراد/دولي) 
                for org in Norg
                  option(value="#{org.id_org}") #{org.name_org}

            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#orgbtnNzip.btn.btn-danger.btn-block() عرض
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-info.btn-block(href="/reports/observerstype/3", target="_blank") بيانات تفصيلية الاعلاميين
       
        .row
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            button#csv.btn.btn-danger.btn-block() csv
            a.btn.btn-danger.btn-block(href="reports/statisticsOfficesByTypeGender", target="_blank") تقرير يومي شامل حسب النوع
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-info.btn-block(href="/reports/observerstype/2", target="_blank") بيانات تفصيلية الضيوف
        .row
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-danger.btn-block(href="/reports/statisticsOfficesByType", target="_blank") تقرير يومي شامل
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-primary.btn-block(href="/reports/observers", target="_blank") بيانات تفصيلية

        .row
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
          .col-xs-6.col-lg-6(style="padding-top: 20px;")
            a.btn.btn-success.btn-block(href="/reports/noOfInternationalObs", target="_blank") احصائية الجهات المعتمدة (دولي,محلي)

    
  script(src="/js/jquery-2.1.1.min.js")
  script(src="/js/bootstrap.min.js")
  script(src="/js/bootstrap-select.min.js")
  script(src="/js/jquery.validate.min.js")
  script(src="/js/bootstrap-notify.min.js")
  script(src="/js/helpers.js")
  script(src="/js/reports.js")