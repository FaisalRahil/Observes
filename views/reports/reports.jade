extends ../layout
block content
  //- link(rel='stylesheet', href='/css/reports.css')
  header.navbar.navbar-gray.navbar-fixed-top.bs-docs-nav(role='banner')
    .navbar-header.pull-left
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      h3.marginLeft.text-muted.text-left 
        a(href="/")
          img(src="/images/hnec_logo.png")
    nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
      ul.fontSizeNav.nav.navbar-nav
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | المستخدمين 
            b.caret
          ul.dropdown-menu
            li
              a(href='/edituser/#{user}') بيانات المستخدم
            li
              a(href='/logout') خروج
        li
          a(href='/reports') التقارير
        li
          a(href='/admin/obs') المراقبين
        li
          a(href='/admin/org') الـمنظمات 
  
  .col-md-8.col-md-offset-2(style="padding-top:5%")
    .panel.panel-primary
      .panel-heading
        .row
          .pull-right(style="margin-right: 10px;")
            h3.panel-title
              span.glyphicon.glyphicon-file
              | 
              span التقارير
      .panel-body
        .row
          form.form#reports(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#nat.form-control.selectpicker(name="obsByNationality", data-live-search="true", data-size=5, data-style="btn-danger")
                option(value="", style='color:grey; display:none;') بيانات المراقبين حسب الجنسية
                for nat in nationalities
                  option(value="#{nat.id}") #{nat.name}
        
            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#natbtn.btn.btn-danger.btn-block() عرض
              //- a.btn.btn-danger.btn-block(href="http://localhost:3003/reports/obsByNationality/#{}", target="_blank") عرض
          form.form#report(accept-charset="utf-8", role="form")
            .col-xs-4.col-lg-4(style="padding-left: 5px;")
              select#obsByType.form-control.selectpicker(name="obsByType", data-live-search="true", data-size=5, data-style="btn-warning")
                option(value="", style='color:grey; display:none;') بيانات المراقبين حسب النوع
                option(value="1") منظمة عالمية
                option(value="2") ضيف
                option(value="3") إعلام دولي
                option(value="4") منظمة محلية
                option(value="5") إعلام محلي
                option(value="6") وكيل
            .col-xs-2.col-lg-2(style="padding-right: 5px;")
              button#typebtn.btn.btn-warning.btn-block() عرض
            //- a.btn.btn-warning.btn-block(href="http://localhost:3003/reports/obsByType/#{}", target="_blank") عرض
            .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-primary.btn-block(href="http://localhost:3003/reports/noOfLocaleObs", target="_blank") بيانات المراقبين المحليين حسب اللجان
            //- .col-xs-6.col-lg-6(style="padding-top: 20px;")
            //-   a.btn.btn-info.btn-block(href="http://localhost:3003/reports/noOfLocaleObsEn", target="_blank") Data according to local observers committees
            .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-success.btn-block(href="http://localhost:3003/reports/noOfInternationalObs", target="_blank") عدد المراقبيين الدوليين حسب النوع
            //- .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-warning.btn-block(href="http://localhost:3003/reports/noOfInternationalObsEn", target="_blank") Number according to international observers committees
            .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-info.btn-block(href="http://localhost:3003/reports/noOfWomenAndMen", target="_blank") عدد المراقبين الرجال والنساء
            //- .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-danger.btn-block(href="http://localhost:3003/reports/noOfWomenAndMenEn", target="_blank") Data observers men and women
            .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-danger.btn-block(href="http://localhost:3003/reports/statisticsOfficesByType", target="_blank") بيانات المراقبين حسب اللجان والنوع
            .col-xs-6.col-lg-6(style="padding-top: 20px;")
              a.btn.btn-primary.btn-block(href="http://localhost:3003/reports/observers", target="_blank") بيانات المراقبين
    
  script(src="/js/jquery-2.1.1.min.js")
  script(src="/js/bootstrap.min.js")
  script(src="/js/bootstrap-select.min.js")
  script(src="/js/jquery.validate.min.js")
  script(src="/js/bootstrap-notify.min.js")
  script(src="/js/helpers.js")
  script(src="/js/reports.js")